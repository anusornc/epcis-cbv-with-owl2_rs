# Core Business Vocabulary (CBV) - Extended Business Steps
cbv:BizStep a rdfs:Class ;
    rdfs:label "Business Step" ;
    rdfs:comment "A business step in the supply chain process" .

# Manufacturing Business Steps
cbv:assembling a cbv:BizStep ;
    rdfs:label "Assembling" ;
    rdfs:comment "Putting components together to create a product" .

cbv:manufacturing a cbv:BizStep ;
    rdfs:label "Manufacturing" ;
    rdfs:comment "Creating or producing a product" .

cbv:production a cbv:BizStep ;
    rdfs:label "Production" ;
    rdfs:comment "The process of making goods" .

cbv:testing a cbv:BizStep ;
    rdfs:label "Testing" ;
    rdfs:comment "Testing products for quality assurance" .

cbv:quality_control a cbv:BizStep ;
    rdfs:label "Quality Control" ;
    rdfs:comment "Quality control processes" .

# Logistics Business Steps
cbv:loading a cbv:BizStep ;
    rdfs:label "Loading" ;
    rdfs:comment "Loading goods onto a vehicle" .

cbv:unloading a cbv:BizStep ;
    rdfs:label "Unloading" ;
    rdfs:comment "Unloading goods from a vehicle" .

cbv:transporting a cbv:BizStep ;
    rdfs:label "Transporting" ;
    rdfs:comment "Transporting goods from one location to another" .

cbv:storing a cbv:BizStep ;
    rdfs:label "Storing" ;
    rdfs:comment "Storing goods in a warehouse" .

cbv:inventory_check a cbv:BizStep ;
    rdfs:label "Inventory Check" ;
    rdfs:comment "Checking inventory levels" .

# Retail Business Steps
cbv:pricing a cbv:BizStep ;
    rdfs:label "Pricing" ;
    rdfs:comment "Setting prices for products" .

cbv:displaying a cbv:BizStep ;
    rdfs:label "Displaying" ;
    rdfs:comment "Displaying products for sale" .

cbv:selling a cbv:BizStep ;
    rdfs:label "Selling" ;
    rdfs:comment "Selling products to customers" .

cbv:customer_pickup a cbv:BizStep ;
    rdfs:label "Customer Pickup" ;
    rdfs:comment "Customer pickup of ordered products" .

# Extended Dispositions
cbv:Disposition a rdfs:Class ;
    rdfs:label "Disposition" ;
    rdfs:comment "The state or condition of an item" .

# Ownership Dispositions
cbv:owned a cbv:Disposition ;
    rdfs:label "Owned" ;
    rdfs:comment "Item is owned by the organization" .

cbv:consigned a cbv:Disposition ;
    rdfs:label "Consigned" ;
    rdfs:comment "Item is consigned to another party" .

cbv:in_transit a cbv:Disposition ;
    rdfs:label "In Transit" ;
    rdfs:comment "Item is currently being transported" .

cbv:reserved a cbv:Disposition ;
    rdfs:label "Reserved" ;
    rdfs:comment "Item is reserved for a specific purpose" .

# Quality Dispositions
cbv:inspected a cbv:Disposition ;
    rdfs:label "Inspected" ;
    rdfs:comment "Item has been inspected" .

cbv:certified a cbv:Disposition ;
    rdfs:label "Certified" ;
    rdfs:comment "Item has been certified" .

cbv:recalled a cbv:Disposition ;
    rdfs:label "Recalled" ;
    rdfs:comment "Item has been recalled" .

cbv:quarantined a cbv:Disposition ;
    rdfs:label "Quarantined" ;
    rdfs:comment "Item is quarantined" .

cbv:destroyed a cbv:Disposition ;
    rdfs:label "Destroyed" ;
    rdfs:comment "Item has been destroyed" .

